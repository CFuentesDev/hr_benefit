<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="report_benefit_delivery_list" model="ir.actions.report">
        <field name="name">Relación de Entrega</field>
        <field name="model">benefit.delivery.list</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_benefit.report_delivery_list_template</field>
        <field name="report_file">hr_benefit.report_delivery_list_template</field>
        <field name="binding_model_id" ref="model_benefit_delivery_list"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_delivery_list_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Relación de Entrega de Beneficios</h2>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Jornada:</strong> <span t-field="o.session_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Fecha de Entrega:</strong> <span t-field="o.date_delivered"/>
                            </div>
                        </div>
                        <div class="row mb32">
                            <div class="col-6">
                                <strong>Responsable del Retiro:</strong> <span t-field="o.responsible_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Estado:</strong> <span t-field="o.state"/>
                            </div>
                        </div>

                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th>Empleado</th>
                                    <th>Departamento</th>
                                    <th class="text-right">Cantidad</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.line_ids" t-as="line">
                                    <td><span t-field="line.employee_id.name"/></td>
                                    <td><span t-field="line.employee_id.department_id.name"/></td>
                                    <td class="text-right"><span t-field="line.qty_delivered"/></td>
                                </tr>
                            </tbody>
                        </table>
                        
                        <div class="row mt32">
                            <div class="col-12 text-center">
                                <p>_________________________________</p>
                                <p>Firma de Recibido</p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
